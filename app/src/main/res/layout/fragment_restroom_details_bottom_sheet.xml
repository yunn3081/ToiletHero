<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header with Name -->
    <TextView
        android:id="@+id/restroom_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Address -->
    <TextView
        android:id="@+id/restroom_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <!-- Placeholder for Image -->
        <ImageView
            android:id="@+id/restroom_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/default_image"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp" />

        <!-- Loading Spinner -->
        <ProgressBar
            android:id="@+id/loadingSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:visibility="gone" />
    </FrameLayout>


    <!-- Horizontal Layout for Reviews and Rating -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <!-- Clickable Reviews Text -->
        <TextView
            android:id="@+id/reviews_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/review_link"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginEnd="8dp" />

        <!-- Rating & Reviews -->
        <TextView
            android:id="@+id/rating_reviews_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
